@model IEnumerable<T2RMSWS.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservations</h1>

<p>
    <!--
     <a asp-action="Create">Create a New Reservation</a>
    <hr />
    -->
    <a asp-action="Guests">Create a reservation</a>
</p>

@if (User.IsInRole("Staff") || User.IsInRole("Manager") || User.IsInRole("Admin"))
{

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes_Requirements)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirstName)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes_Requirements)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit <span class="fa fa-edit"> </span></a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete <span class="fa fa-trash"> </span></a>
            </td>
        </tr>
}
    </tbody>
</table>
}