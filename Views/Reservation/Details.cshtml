<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservation.Customer.FirstName)
        </dt>
        <dd class="col-sm-10">
