        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservation.ReservationType)
        </dt>
        <dd class="col-sm-10">
            
            @for (int i = 0; i < Model.reservationTypeList.Count(); i++) {
                if (Model.reservationTypeList.ToArray().ElementAt(i).Id == Model.reservation.ReservationTypeId) {
                    @Html.DisplayFor(model => model.reservationTypeList.ToArray().ElementAt(i).Description);
                }
            }
           
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservation.ReservationStatus)
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.reservationStatusList.Count(); i++)
            {
                if (Model.reservationStatusList.ToArray().ElementAt(i).Id == Model.reservation.ReservationStatusId)
                {
                    @Html.DisplayFor(model => model.reservationStatusList.ToArray().ElementAt(i).Desc);
