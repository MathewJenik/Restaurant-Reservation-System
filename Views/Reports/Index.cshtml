    <!-- THIS IS THE RESERVATION JS CODE -->
    <script src="~/js/material-dashboard/ReservationDashboard.js"></script>
    <script>
        $(document).ready(function () {
            // Javascript method's body can be found in assets/js/demos.js

            // pass data here
            var monthData = [@Model.CurrentYearsReservationsByMonth.ElementAt(0),@Model.CurrentYearsReservationsByMonth.ElementAt(1),
            @Model.CurrentYearsReservationsByMonth.ElementAt(2),@Model.CurrentYearsReservationsByMonth.ElementAt(3),
            @Model.CurrentYearsReservationsByMonth.ElementAt(4),@Model.CurrentYearsReservationsByMonth.ElementAt(5),
            @Model.CurrentYearsReservationsByMonth.ElementAt(6),@Model.CurrentYearsReservationsByMonth.ElementAt(7),
            @Model.CurrentYearsReservationsByMonth.ElementAt(8),@Model.CurrentYearsReservationsByMonth.ElementAt(9),
            @Model.CurrentYearsReservationsByMonth.ElementAt(10),@Model.CurrentYearsReservationsByMonth.ElementAt(11)

            ];

            var d1, d2, d3, d4, d5, d6, d7 = 0;

            @{
                int[] daysArray = new int[7];
                for (int i = 0; i < 7; i++)
                {
                    if (Model.DaysOfWeek.ElementAt(i) == 0)
                    {
                        daysArray[i] = 0;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 1)
                    {
                        daysArray[i] = 1;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 2)
                    {
                        daysArray[i] = 2;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 3)
                    {
                        daysArray[i] = 3;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 4)
                    {
                        daysArray[i] = 4;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 5)
                    {
                        daysArray[i] = 5;
                    }
                    else if (Model.DaysOfWeek.ElementAt(i) == 6)
                    {
                        daysArray[i] = 6;
                    }
                }

                <Text>
            d1 = @daysArray[0];
            d2 = @daysArray[1];
            d3 = @daysArray[2];
            d4 = @daysArray[3];
            d5 = @daysArray[4];
            d6 = @daysArray[5];
            d7 = @daysArray[6];

                </Text>

            }

            var weekData = [@Model.CurrentWeeksReservations.ElementAt(0),
            @Model.CurrentWeeksReservations.ElementAt(1),
            @Model.CurrentWeeksReservations.ElementAt(2),
            @Model.CurrentWeeksReservations.ElementAt(3),
            @Model.CurrentWeeksReservations.ElementAt(4),
            @Model.CurrentWeeksReservations.ElementAt(5),
            @Model.CurrentWeeksReservations.ElementAt(6),

            @daysArray[0], @daysArray[1], @daysArray[2],@daysArray[3],@daysArray[4],@daysArray[5],@daysArray[6] ,
            ];

                var weekDaysData = [@Model.DaysOfWeek.ElementAt(0).ToString(),
                @Model.DaysOfWeek.ElementAt(1).ToString(),
                @Model.DaysOfWeek.ElementAt(2).ToString(),
                @Model.DaysOfWeek.ElementAt(3).ToString(),
                @Model.DaysOfWeek.ElementAt(4).ToString(),
                @Model.DaysOfWeek.ElementAt(5).ToString(),
                @Model.DaysOfWeek.ElementAt(6).ToString(),];


            var tableSeatedPerMonthData = [@Model.MonthTableData.ElementAt(0)[0],@Model.MonthTableData.ElementAt(0)[1],@Model.MonthTableData.ElementAt(0)[2],
            @Model.MonthTableData.ElementAt(1)[0],@Model.MonthTableData.ElementAt(1)[1],@Model.MonthTableData.ElementAt(1)[2],
            @Model.MonthTableData.ElementAt(2)[0],@Model.MonthTableData.ElementAt(2)[1],@Model.MonthTableData.ElementAt(2)[2],
            @Model.MonthTableData.ElementAt(3)[0],@Model.MonthTableData.ElementAt(3)[1],@Model.MonthTableData.ElementAt(3)[2],
            @Model.MonthTableData.ElementAt(4)[0],@Model.MonthTableData.ElementAt(4)[1],@Model.MonthTableData.ElementAt(4)[2],
            @Model.MonthTableData.ElementAt(5)[0],@Model.MonthTableData.ElementAt(5)[1],@Model.MonthTableData.ElementAt(5)[2],
            @Model.MonthTableData.ElementAt(6)[0],@Model.MonthTableData.ElementAt(6)[1],@Model.MonthTableData.ElementAt(6)[2],
            @Model.MonthTableData.ElementAt(7)[0],@Model.MonthTableData.ElementAt(7)[1],@Model.MonthTableData.ElementAt(8)[2],
            @Model.MonthTableData.ElementAt(8)[0],@Model.MonthTableData.ElementAt(8)[1],@Model.MonthTableData.ElementAt(8)[2],
            @Model.MonthTableData.ElementAt(9)[0],@Model.MonthTableData.ElementAt(9)[1],@Model.MonthTableData.ElementAt(9)[2],
            @Model.MonthTableData.ElementAt(10)[0],@Model.MonthTableData.ElementAt(10)[1],@Model.MonthTableData.ElementAt(10)[2],
            @Model.MonthTableData.ElementAt(11)[0],@Model.MonthTableData.ElementAt(11)[1],@Model.MonthTableData.ElementAt(11)[2],]

                md.initDashboardPageCharts(monthData, weekData, tableSeatedPerMonthData);

        });
