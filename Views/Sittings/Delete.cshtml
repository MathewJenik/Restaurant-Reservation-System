@model T2RMSWS.Data.Sitting

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Sitting?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Sitting Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SittingType.Description)
        </dd class>
        <dt class="col-sm-2">
            Start Date & Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class="col-sm-2">
            End Date & Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDateTime)
        </dd>
        <dt class = "col-sm-2">
            Capacity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            Sitting Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SittingStatus.Description)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
